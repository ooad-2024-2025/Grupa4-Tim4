@model IEnumerable<eOpcina.Models.Zahtjev>

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole("Administrator") || User.IsInRole("Zaposlenik"))
{
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DatumSlanja)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RazlogZahtjeva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Korisnik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dokument)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DatumSlanja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RazlogZahtjeva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Korisnik.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dokument.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}
