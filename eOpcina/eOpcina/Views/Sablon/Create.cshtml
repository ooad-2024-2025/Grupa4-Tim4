@model eOpcina.Models.Sablon

@{
    ViewData["Title"] = "Dodaj šablon";
}

<h1>Dodaj šablon</h1>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group" style="margin-top: 30px;">
        <label asp-for="TipDokumenta" class="control-label">Tip dokumenta</label>
        <select asp-for="TipDokumenta" class="form-control" asp-items="ViewBag.TipoviDokumenata"></select>
        <span asp-validation-for="TipDokumenta" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 30px;">
        <label for="PDFSablona">PDF šablona</label>
        <input type="file" name="pdfFile" class="form-control" accept="application/pdf" />
        <span asp-validation-for="PDFSablona" class="text-danger"></span>
    </div>
    <button type="submit" style="margin-top: 30px;" class="btn btn-primary">Sačuvaj</button>
    <a asp-action="Index" style="margin-top: 30px;" class="btn btn-secondary">Nazad na listu</a>
</form>
