@model eOpcina.Models.Sablon

@{
    ViewData["Title"] = "Delete Sablon";
}

<h1>Delete Sablon</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sablon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tip dokumenta</dt>
        <dd class="col-sm-10">@Model.TipDokumenta</dd>
        <dt class="col-sm-2">PDF Šablon</dt>
        <dd class="col-sm-10">
            @(Model.PDFSablona != null && Model.PDFSablona.Length > 0 ? "Postavljen" : "Nije postavljen")
        </dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
