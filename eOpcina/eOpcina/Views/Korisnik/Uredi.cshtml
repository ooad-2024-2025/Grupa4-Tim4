@model List<eOpcina.Models.Korisnik>

<form asp-action="Uredi" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Email</th>
                <th>Korisničko ime</th>
                <th>JMBG</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model[i].Ime" class="form-control" />
                        <input type="hidden" asp-for="@Model[i].Id" />
                    </td>
                    <td>
                        <input asp-for="@Model[i].Prezime" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="@Model[i].Email" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="@Model[i].UserName" class="form-control" readonly />
                    </td>
                    <td>
                        <input asp-for="@Model[i].JMBG" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Sačuvaj promjene</button>
</form>
